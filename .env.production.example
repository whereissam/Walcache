# Production Environment Variables

# Backend Configuration
NODE_ENV=production
PORT=4500
HOST=0.0.0.0

# Walrus Network
WALRUS_ENDPOINT=https://publisher.walrus.wal.app
WALRUS_AGGREGATOR=https://aggregator.walrus.wal.app

# IPFS Fallback
IPFS_GATEWAY=https://ipfs.io/ipfs/
ENABLE_IPFS_FALLBACK=true

# Redis Cache
REDIS_URL=redis://redis:6379
CACHE_TTL=3600
MAX_CACHE_SIZE=10000

# Security
API_KEY_SECRET=your-strong-api-secret-here
ALLOWED_ORIGINS=https://your-frontend.com,https://cdn.your-domain.com

# Analytics & Monitoring
ENABLE_ANALYTICS=true
WEBHOOK_URL=https://your-webhook-endpoint.com/walrus-cdn

# Tusky.io Integration
TUSKY_API_URL=https://api.tusky.io/v1
TUSKY_API_KEY=your-tusky-api-key
TUSKY_DEFAULT_VAULT_ID=your-default-vault-id