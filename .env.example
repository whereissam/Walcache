# WCDN Configuration Example
# Copy this file to .env and configure your settings

# ==================== Frontend Configuration ====================
# Backend API Configuration
REACT_APP_WALCACHE_URL=http://localhost:4500
REACT_APP_WALCACHE_API_KEY=dev-secret-walcache-2024

# Node Environment
NODE_ENV=development

# Optional: For production deployment
# REACT_APP_WALCACHE_URL=https://your-walcache-api.com
# REACT_APP_WALCACHE_API_KEY=your-production-api-key

# ==================== Backend Configuration ====================
# (Add these to your backend .env file)

# Server Configuration
PORT=4500
HOST=127.0.0.1

# Redis Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
MAX_CACHE_SIZE=100

# Walrus Configuration
WALRUS_NETWORK=testnet
# WALRUS_ENDPOINT=https://publisher.walrus-testnet.walrus.space
# WALRUS_AGGREGATOR=https://aggregator.walrus-testnet.walrus.space

# Security Configuration
API_KEY_SECRET=dev-secret-key
# ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174

# Monitoring Configuration
ENABLE_ANALYTICS=true
ENABLE_METRICS=true
# WEBHOOK_URL=https://your-webhook-url.com

# Tusky Integration
# TUSKY_API_URL=https://api.tusky.io
# TUSKY_API_KEY=your_tusky_api_key_here
# TUSKY_DEFAULT_VAULT_ID=your_vault_id_here

# Seal Integration
ENABLE_SEAL=true
SEAL_DEFAULT_THRESHOLD=2
# SEAL_DEFAULT_PACKAGE_ID=0x123... (deploy Move contract first)

# Logging Configuration
LOG_LEVEL=info