# Server Configuration
PORT=4500
NODE_ENV=development

# Walrus Network Configuration (using official endpoints)
WALRUS_ENDPOINT=https://publisher.walrus-testnet.walrus.space
WALRUS_AGGREGATOR=https://aggregator.walrus-testnet.walrus.space
WALRUS_NETWORK=testnet

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
MAX_CACHE_SIZE=1000

# Security & Authentication
API_KEY_SECRET=your-secure-api-key-here-change-this-in-production
ALLOWED_ORIGINS=http://localhost:4500,http://localhost:5173,https://yourdomain.com

# Analytics & Monitoring
ENABLE_ANALYTICS=true
WEBHOOK_URL=https://your-webhook-endpoint.com/webhook

# Tusky.io Integration
TUSKY_API_URL=https://api.tusky.io
TUSKY_API_KEY=your-tusky-api-key-here
TUSKY_DEFAULT_VAULT_ID=your-default-vault-id

# IPFS Fallback Configuration
IPFS_GATEWAY=https://ipfs.io/ipfs/
ENABLE_IPFS_FALLBACK=true